@page "/fetchdata"
@namespace Blazr.App.UI
@inject IListPresenter<WeatherForecast, WeatherForecastEntityService> Presenter

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        <Virtualize ItemsProvider="this.Presenter.GetItemsAsync" Context="forecast">
            <tr>
                <td>@forecast.Date.ToShortDateString()</td>
                <td>@forecast.TemperatureC</td>
                <td>@forecast.AsTemperatureF()</td>
                <td class="max-width">@forecast.Summary</td>
            </tr>
        </Virtualize>
    </tbody>
</table>

