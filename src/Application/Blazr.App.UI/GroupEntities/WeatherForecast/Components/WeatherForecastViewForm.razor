@namespace Blazr.App.UI
@inherits UIViewerFormBase<WeatherForecast>

<h3>Weather Forecast Viewer</h3>

<div class="row">

    <div class="col-12 col-lg-6 mb-2">
        <BlazrTextViewControl Label="Date" Value="@this.Presenter.Item.Date.AsGlobalDate()" />
    </div>

    <div class="col-12 col-lg-6 mb-2">
        <BlazrTextViewControl Label="Summary" Value="@this.Presenter.Item.Summary" />
    </div>

    <div class="col-12 col-lg-6 mb-2">
        <BlazrTextViewControl Label="Temperature &degC" Value="@this.Presenter.Item.TemperatureC" />
    </div>

    <div class="col-12 col-lg-6 mb-2">
        <BlazrTextViewControl Label="Temperature &degF" Value="@this.Presenter.Item.AsTemperatureF()" />
    </div>

</div>

